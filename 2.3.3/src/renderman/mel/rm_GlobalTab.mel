source liq_RendererName.mel;
//
global proc rmGlobalTab()
{
	liqPushIdent();
	liqlog("rmGlobalTab()");

	if ( `renderer -exists (liq_getRendererName())`)
	{
		renderer -edit
				-addGlobalsTab (rm_getRendererName()) "rmCreateGlobalsTab" "rmUpdateGlobalsTab"
		(liq_getRendererName());
	}else{
		liqError("liquid is not registed.");
	}
	liqPopIdent();
}
