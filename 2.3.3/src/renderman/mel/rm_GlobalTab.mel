			$parent;

	liqPopIdent();
}
global proc rmUpdateGlobalsTab()
{
	liqPushIdent();
	liqlog("rmUpdateGlobalsTab()");
		
	rmUpdateGlobalsTab_test();

	liqPopIdent();
}
