source xxliquidutility.mel;

//- verbose --------------------------------------------------
global proc AEEIVerboseNew( string $messageAttr )
{
	string $buffer[];
    tokenize($messageAttr, ".", $buffer);
    if (size($buffer) == 0) return;
    string $node = $buffer[0];

	setUITemplate -pushTemplate attributeEditorTemplate;
	attrEnumOptionMenuGrp
				-label (uiRes("m_AEelvishrayGlobals.kVerbose"))
				-at ($node+".verbose")
				-ei 0 "None"
				-ei 1 "Fatal"
				-ei 2 "Error"
				-ei 3 "Warning"
				-ei 4 "Info"
				-ei 5 "Debug"
				-ei 6 "All"
				EIVerboseMenu;
    AEEIVerboseReplace($messageAttr);

	setUITemplate -popTemplate;
}
global proc AEEIVerboseReplace( string $messageAttr )
{
}
